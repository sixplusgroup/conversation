<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gmair.order.ordercommodity">
    <resultMap id="orderCommodityVo" type="finley.gmair.vo.order.OrderCommodityVo">
        <result property="commodityId" column="com_id" />
        <result property="commodityType" column="com_type"
                typeHandler="finley.gmair.mybatis.handler.CommodityTypeHandler"/>
        <result property="commodityName" column="com_name" />
        <result property="commodityPrice" column="com_price" />
        <result property="blockFlag" column="block_flag"/>
        <result property="createTime" column="create_time" />
    </resultMap>

    <select id="query" parameterType="java.util.Map" resultMap="orderCommodityVo">
        SELECT com_id, com_type, com_name, com_price, block_flag, create_time
        FROM `gmair_order`.`order_commodity`
        where 1 = 1
        <if test="commodityType != null">
            AND commodity_type = #{commodityType}
        </if>
        <if test="blockFlag != null">
            AND block_flag = #{blockFlag}
        </if>
    </select>
</mapper>