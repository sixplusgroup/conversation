<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gmair.wechat.template.text">
    <resultMap id="textTemplateVo" type="finley.gmair.model.wechat.TextTemplate">
        <result property="templateId" column="template_id"></result>
        <result property="messageType" column="message_type"></result>
        <result property="response" column="response"></result>
        <result property="blockFlag" column="block_flag"></result>
        <result property="createAt" column="create_time"></result>
    </resultMap>

    <resultMap id="textReplyVo" type="finley.gmair.vo.wechat.TextReplyVo">
        <result property="keyword" column="keyword"></result>
        <result property="messageType" column="message_type"></result>
        <result property="templateId" column="template_id"></result>
        <result property="response" column="response"></result>
    </resultMap>

    <insert id="insert" parameterType="finley.gmair.model.wechat.TextTemplate" useGeneratedKeys="false">
        INSERT INTO gmair_wechat.text_template(template_id, message_type, response, block_flag, create_time)
        VALUES (#{templateId}, #{messageType}, #{response}, #{blockFlag}, #{createAt})
    </insert>

    <select id="query" parameterType="java.util.Map" resultMap="textTemplateVo">
        SELECT template_id, message_type, response, block_flag, create_time
        FROM gmair_wechat.text_template
        WHERE 1 = 1
        <if test="templateId != null">
            AND template_id = #{templateId}
        </if>
        <if test="messageType != null">
            AND message_type = #{messageType}
        </if>
        <if test="response != null">
            AND response = #{response}
        </if>
        <if test="blockFlag != null">
            AND block_flag = #{blockFlag}
        </if>
        ORDER BY create_time DESC
    </select>

    <select id="textReplyQuery" parameterType="java.util.Map" resultMap="textReplyVo">
        select  keyword, message_type, template_id, response
        from gmair_wechat.text_reply_view
        where 1 = 1
        <if test="keyword != null">
            and keyword = #{keyword}
        </if>
        <if test="messageType != null">
            and message_type = #{messageType}
        </if>
        <if test="templateId != null">
            and template_id = #{templateId}
        </if>
        <if test="response != null">
            and response = #{response}
        </if>
    </select>
</mapper>