<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gmair.monitor.profile">
    <resultMap id="profileVo" type="finley.gmair.model.Profile">
        <result property="profileId" column="profile_id"></result>
        <result property="qrcode" column="qrcode"></result>
        <result property="logoPath" column="logo_path"></result>
        <result property="qrcodePath" column="qrcode_path"></result>
        <result property="blockFlag" column="block_flag"></result>
        <result property="createAt" column="create_time"></result>
    </resultMap>

    <select id="query" resultMap="profileVo">
        SELECT profile_id, qrcode, logo_path, qrcode_path, block_flag, create_time
        FROM monitor_profile
        WHERE 1 = 1
        <if test="profileId != null">
            AND profile_id = #{profileId}
        </if>
        <if test="qrcode != null">
            AND qrcode = #{qrcode}
        </if>
        <if test="blockFlag != null">
            AND block_flag = #{blockFlag}
        </if>
    </select>
</mapper>