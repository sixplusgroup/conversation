<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gmair.monitor.advertisement">
    <resultMap id="adsVo" type="finley.gmair.model.Advertisement">
        <result property="adsId" column="ads_id"></result>
        <result property="qrcode" column="qrcode"></result>
        <result property="content" column="content"></result>
        <result property="blockFlag" column="block_flag"></result>
        <result property="createAt" column="create_time"></result>
    </resultMap>

    <select id="query" resultMap="adsVo">
        SELECT ads_id, qrcode, content, block_flag, create_time
        FROM gmair_monitor.monitor_ads
        WHERE 1 = 1
        <if test="adsId != null">
            AND ads_id = #{adsId}
        </if>
        <if test="qrcode != null">
            AND qrcode = #{qrcode}
        </if>
        <if test="blockFlag != null">
            AND block_flag = #{blockFlag}
        </if>
    </select>
</mapper>