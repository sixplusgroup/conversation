<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gmair.drift.express">
    <resultMap id="expressVo" type="finley.gmair.model.drift.Express">
        <result property="orderId" column="order_id"></result>
        <result property="expressId" column="express_id"></result>
        <result property="company" column="company"></result>
        <result property="status" column="express_status"
                typeHandler="finley.gmair.mybatis.handler.ExpressStatusHandler"></result>
    </resultMap>

    <select id="query" parameterType="java.util.Map" resultMap="expressVo">
        select order_id, express_id, company, express_status, block_flag, create_time
        from gmair_drift.order_express
        where 1 = 1
        <if test="orderId != null">
            AND order_id = #{orderId}
        </if>
        <if test="expressId != null">
            AND express_id = #{expressId}
        </if>
        <if test="company != null">
            AND company = #{company}
        </if>
        <if test="status != null">
            AND status = #{express_status}
        </if>
        ORDER BY create_time ASC
    </select>

    <insert id="inset" parameterType="finley.gmair.model.drift.Express" useGeneratedKeys="false">
        insert into gmair_drift.order_express (order_id, express_id, express_status, company, block_flag, create_time)
        VALUES (#{orderId},
        #{expressId},
        #{status, typeHandler=org.apache.ibatis.type.EnumOrdinalTypeHandler},
        #{company},
        #{blockFlag},
        #{createAt})
    </insert>

    <update id="update" parameterType="finley.gmair.model.drift.Express">
        update gmair_drift.order_express
        <set>
            <if test="company != null">
                company = #{company},
            </if>
            <if test="status != null">
                express_status = #{status, typeHandler=org.apache.ibatis.type.EnumOrdinalTypeHandler}
            </if>
        </set>
    </update>
</mapper>