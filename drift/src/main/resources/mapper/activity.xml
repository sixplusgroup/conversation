<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gmair.drift.activity">
    <resultMap id="activityVo" type="finley.gmair.model.drift.Activity">
        <result property="activityId" column="activity_id"></result>
        <result property="activityName" column="activity_name"></result>
        <result property="repositorySize" column="repository_size"></result>
        <result property="threshold" column="threshold"></result>
        <result property="reservableDays" column="reservable_days"></result>
        <result property="startTime" column="start_time"></result>
        <result property="endTime" column="end_time"></result>
        <result property="introduction" column="introduction"></result>
        <result property="blockFlag" column="block_flag"></result>
        <result property="createAt" column="create_time"></result>
        <result property="openDate" column="open_date"></result>
        <result property="closeDate" column="close_date"></result>
        <result property="delayDays" column="delay_days"></result>
        <result property="reservationName" column="reservation_name"></result>
        <result property="reservationText" column="reservation_text"></result>
        <result property="backAddress" column="back_address"></result>
        <result property="backPhone" column="back_phone"></result>
        <result property="backName" column="back_name"></result>
    </resultMap>

    <resultMap id="activityEquipmentVo" type="finley.gmair.vo.drift.ActivityEquipmentVo">
        <result property="activityId" column="activity_id"></result>
        <result property="activityName" column="activity_name"></result>
        <result property="equipmentId" column="equip_id"></result>
        <result property="equipmentName" column="equip_name"></result>
        <result property="text" column="text"></result>
        <result property="url" column="url"></result>
        <result property="detailUrl" column="detail_url"></result>
        <result property="blockFlag" column="block_flag"></result>
        <result property="createAt" column="create_time"></result>
    </resultMap>

    <select id="queryActivityEquipment" parameterType="java.util.Map" resultMap="activityEquipmentVo">
        select activity_id, activity_name, equip_id, equip_name, text,url,detail_url,block_flag, create_time
        from gmair_drift.activity_equipment_view
        where 1 = 1
        <if test="activityId != null">
            and activity_id = #{activityId}
        </if>
        <if test="activityName != null">
            and activity_name = #{activityName}
        </if>
        <if test="equipmentId != null">
            and equip_id = #{equipmentId}
        </if>
        <if test="equipmentName != null">
            and equip_name = #{equipmentName}
        </if>
        <if test="blockFlag != null">
            and block_flag = #{blockFlag}
        </if>
        order by create_time desc
    </select>

    <select id="query" parameterType="java.util.Map" resultMap="activityVo">
        select activity_id, activity_name, repository_size, threshold, reservable_days, start_time, end_time,
        introduction, block_flag, create_time, host,open_date,close_date,delay_days,reservation_name,reservation_text,
        back_address,back_name,back_phone
        from gmair_drift.drift_activity
        where 1 = 1
        <if test="activityId != null">
            and activity_id = #{activityId}
        </if>
        <if test="activityName != null">
            and activity_name = #{activityName}
        </if>
        <if test="repositorySize != null">
            and repository_size = #{repositorySize}
        </if>
        <if test="threshold != null">
            and threshold = #{threshold}
        </if>
        <if test="reservableDays != null">
            and reservable_days = #{reservableDays}
        </if>
        <if test="startTime != null">
            and start_time = #{startTime}
        </if>
        <if test="endTime != null">
            and end_time = #{endTime}
        </if>
        <if test="introduction != null">
            and introduction = #{introduction}
        </if>
        <if test="blockFlag != null">
            and block_flag = #{blockFlag}
        </if>
        <if test="host != null">
            and host = #{host}
        </if>
        order by create_time desc
    </select>

    <insert id="insert" parameterType="finley.gmair.model.drift.Activity">
        INSERT INTO gmair_drift.drift_activity (activity_id, activity_name, repository_size, threshold, reservable_days, start_time, end_time, introduction, block_flag, create_time, host)
        VALUES (#{activityId}, #{activityName}, #{repositorySize}, #{threshold}, #{reservableDays}, #{startTime},
                #{endTime}, #{introduction}, #{blockFlag}, #{createAt},#{host})
    </insert>

    <update id="update" parameterType="java.util.Map">
        update gmair_drift.drift_activity
        <set>
            <if test="activityName != null">
                activity_name = #{activityName},
            </if>
            <if test="repositorySize != null">
                repository_size = #{repositorySize},
            </if>
            <if test="threshold != null">
                threshold = #{threshold},
            </if>
            <if test="reservableDays != null">
                reservable_days = #{reservableDays},
            </if>
            <if test="startTime != null">
                start_time = #{startTime},
            </if>
            <if test="endTime != null">
                end_time = #{endTime},
            </if>
            <if test="introduction != null">
                introduction = #{introduction},
            </if>
            activity_id = #{activityId}
        </set>
        where activity_id = #{activityId}
    </update>
</mapper>