<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gmair.drift.order.item">
    <resultMap id="itemVo" type="finley.gmair.model.drift.DriftOrderItem">
        <result property="itemId" column="item_id"></result>
        <result property="orderId" column="order_id"></result>
        <result property="itemName" column="item_name"></result>
        <result property="singleNum" column="single_num"></result>
        <result property="quantity" column="quantity"></result>
        <result property="itemPrice" column="item_price"></result>
        <result property="blockFlag" column="block_flag"></result>
        <result property="createAt" column="create_time"></result>
    </resultMap>

    <insert id="insert" parameterType="finley.gmair.model.drift.DriftOrderItem" useGeneratedKeys="false">
        insert into gmair_drift.drift_order_item(item_id, order_id, item_name, single_num, quantity, item_price, block_flag, create_time)
        values(#{itemId}, #{orderId}, #{itemName}, #{singleNum}, #{quantity}, #{itemPrice}, #{blockFlag}, #{createAt})
    </insert>

    <select id="query" parameterType="java.util.Map" resultMap="itemVo">
        select item_id, order_id, item_name, single_num, quantity, item_price, block_flag, create_time
        from gmair_drift.drift_order_item
        where 1 = 1
        <if test="itemId != null">
            and item_id = #{itemId}
        </if>
        <if test="orderId != null">
            and order_id = #{orderId}
        </if>
        <if test="blockFlag != null">
            and block_flag = #{blockFlag}
        </if>
    </select>

    <update id="update" parameterType="finley.gmair.model.drift.DriftOrderItem">
        update gmair_drift.drift_order_item
        <set>
            <if test="itemName != null">
                item_name = #{itemName},
            </if>
            <if test="singleNum != null">
                single_num = #{singleNum},
            </if>
            <if test="quantity != null">
                quantity = #{quantity},
            </if>
            <if test="itemPrice != null">
                item_price = #{itemPrice},
            </if>
            <if test="blockFlag != null">
                block_flag = #{blockFlag},
            </if>
            item_id = #{itemId}
        </set>
        where item_id = #{itemId}
    </update>

    <delete id="delete" parameterType="java.lang.String">
        delete from gmair_drift.drift_order_item
        where item_id = #{itemId}
    </delete>
</mapper>