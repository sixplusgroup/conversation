<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gmair.drift.repository">
    <resultMap id="repositoryVo" type="finley.gmair.model.drift.DriftRepository">
        <result property="repositoryId" column="repository_id"></result>
        <result property="goodsId" column="goods_id"></result>
        <result property="poolSize" column="pool_size"></result>
        <result property="blockFlag" column="block_flag"></result>
        <result property="createAt" column="create_time"></result>
    </resultMap>

    <select id="query" parameterType="java.util.Map" resultMap="repositoryVo">
        select repository_id, goods_id, pool_size, block_flag, create_time
        from gmair_drift.drift_repository
        where 1 = 1
        <if test="repositoryId != null">
            and repository_id = #{repositoryId}
        </if>
        <if test="goodsId != null">
            and goods_id = #{goodsId}
        </if>
        <if test="poolSize != null">
            and pool_size = #{poolSize}
        </if>
        <if test="blockFlag != null">
            and block_flag = #{blockFlag}
        </if>
        order by create_time desc
    </select>
</mapper>