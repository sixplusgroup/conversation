<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gmair.drift.commodity">
    <resultMap id="commodityVo" type="finley.gmair.vo.drift.DriftOrderCommodityVo">
        <result property="commodityId" column="commodity_id"></result>
        <result property="commodityName" column="commodity_name"></result>
        <result property="commodityType" column="commodity_type"
                typeHandler="finley.gmair.mybatis.handler.DriftCommodityTypeHandler"></result>
        <result property="commodityPrice" column="commodity_price"></result>
        <result property="blockFlag" column="block_flag"></result>
        <result property="createAt" column="create_time"></result>
    </resultMap>

    <select id="query" parameterType="java.util.Map" resultMap="commodityVo">
        select commodity_id, commodity_name, commodity_type, commodity_price, block_flag, create_time
        from gmair_drift.drift_order_commodity
        where 1 = 1
        <if test="commodityType != null">
            and commodity_type = #{commodityType}
        </if>
        <if test="blockFlag != null">
            and block_flag = #{blockFlag}
        </if>
    </select>
</mapper>