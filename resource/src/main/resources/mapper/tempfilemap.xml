<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gmair.resource.tempfilemap">
    <resultMap id="TempFileMap" type="finley.gmair.model.resource.FileMap">
        <result property="fileId" column="file_id" />
        <result property="fileUrl" column="file_url" />
        <result property="actualPath" column="actual_path"/>
        <result property="fileName" column="filename" />
        <result property="blockFlag" column="block_flag" />
        <result property="createAt" column="create_time" />
    </resultMap>

    <insert id="insert" parameterType="finley.gmair.model.resource.FileMap" useGeneratedKeys="false">
        INSERT INTO gmair_resource.tempfile_location(file_id, file_url, actual_path, filename, block_flag, create_time)
        VALUES(
          #{fileId},#{fileUrl},#{actualPath},#{fileName},#{blockFlag},#{createAt}
        )
    </insert>

    <select id="query" parameterType="java.util.Map" resultMap="TempFileMap">
        SELECT *
        FROM gmair_resource.tempfile_location
        WHERE 1 = 1
        <if test="fileId != null">
            AND file_id = #{fileId}
        </if>
        <if test="teamId != null">
            AND file_url = #{fileUrl}
        </if>
        <if test="memberPhone != null">
            AND actual_path = #{actualPath}
        </if>
        <if test="memberName != null">
            AND filename = #{fileName}
        </if>
        <if test="blockFlag != null">
            AND block_flag = #{blockFlag}
        </if>
    </select>

    <update id="update" parameterType="finley.gmair.model.resource.FileMap">
        UPDATE gmair_resource.tempfile_location
        <set>
            <if test="fileUrl != null">
                file_url = #{fileUrl},
            </if>
            <if test="actualPath != null">
                actual_path = #{actualPath},
            </if>
            <if test="fileName != null">
                filename = #{fileName},
            </if>
            <if test="blockFlag != null">
                block_flag = #{blockFlag},
            </if>
            file_id = #{fileId}
        </set>
        WHERE file_id = #{fileId}
    </update>

</mapper>