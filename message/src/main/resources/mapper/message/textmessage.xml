<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gmair.message">
    <resultMap id="messageVo" type="finley.gmair.model.message.TextMessage">
        <result property="messageId" column="message_id"></result>
        <result property="phone" column="phone"></result>
        <result property="text" column="text"></result>
        <result property="blockFlag" column="block_flag"></result>
        <result property="createAt" column="create_time"></result>
    </resultMap>

    <select id="query" parameterType="java.util.Map" resultMap="messageVo">
        SELECT message_id, phone, text, block_flag, create_time
        FROM gmair_message.text_message
        WHERE 1 = 1
        <if test="phone != null">
            AND phone = #{phone}
        </if>
        ORDER BY create_time DESC
    </select>

    <insert id="insert" parameterType="finley.gmair.model.message.TextMessage" useGeneratedKeys="false">
        INSERT INTO gmair_message.text_message (message_id, phone, text, block_flag, create_time)
        VALUES (#{messageId}, #{phone}, #{text}, #{blockFlag}, #{createAt})
    </insert>
</mapper>