<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gmair.message.receive">
    <resultMap id="messageVo" type="finley.gmair.model.message.TextMessage">
        <result property="messageId" column="message_id"></result>
        <result property="phone" column="mobile"></result>
        <result property="text" column="text"></result>
        <result property="blockFlag" column="block_flag"></result>
        <result property="createAt" column="create_time"></result>
    </resultMap>

    <insert id="insert" parameterType="finley.gmair.model.message.TextMessage">
        INSERT INTO gmair_message.in_text_message (message_id, mobile, text, block_flag, create_time)
        VALUES (#{messageId}, #{phone}, #{text}, #{blockFlag}, #{createAt})
    </insert>

    <select id="query" parameterType="java.util.Map" resultMap="messageVo">
        SELECT message_id, phone, text, block_flag, create_time
        FROM gmair_message.in_text_message
        WHERE 1 = 1
        <if test="messageId != null">
            AND message_id = #{messageId}
        </if>
        <if test="phone != null">
            AND phone = #{phone}
        </if>
    </select>
</mapper>