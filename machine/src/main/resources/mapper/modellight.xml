<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gmair.machine.modellight">
    <resultMap id="ModelLight" type="finley.gmair.model.machine.ModelLight">
        <result property="configId" column="config_id"></result>
        <result property="modelId" column="model_id"></result>
        <result property="minLight" column="min_light"></result>
        <result property="maxLight" column="max_light"></result>
        <result property="step" column="step"></result>
        <result property="blockFlag" column="block_flag"></result>
        <result property="createAt" column="create_time"></result>
    </resultMap>

    <insert id="insert" parameterType="finley.gmair.model.machine.ModelLight" useGeneratedKeys="false">
        INSERT INTO gmair_machine.model_light_config (config_id, model_id, min_light, max_light, create_time, block_flag)
        VALUES (#{configId}, #{modelId}, #{minLight}, #{maxLight}, #{createAt}, #{blockFlag})
    </insert>

    <select id="query" parameterType="java.util.Map" resultMap="ModelLight">
        SELECT config_id, model_id, min_light, max_light, step, block_flag, create_time
        FROM gmair_machine.model_light_config
        WHERE 1 = 1
        <if test="configId != null">
            AND config_id = #{configId}
        </if>
        <if test="modelId != null">
            AND model_id = #{modelId}
        </if>
        <if test="minLight != null">
            AND min_light = #{minLight}
        </if>
        <if test="maxLight != null">
            AND max_light = #{maxLight}
        </if>
    </select>

    <update id="updateByModelId" parameterType="java.util.Map">
        UPDATE gmair_machine.model_light_config
        <set>
            <if test="modelId != null">
                model_id = #{modelId},
            </if>
            <if test="minLight != null">
                min_light = #{minLight},
            </if>
            <if test="maxLight != null">
                max_light = #{maxLight},
            </if>
            <if test="step != null">
                step = #{step},
            </if>
            model_id = #{modelId}
        </set>
        WHERE model_id = #{modelId}
    </update>
</mapper>