<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gmair.machine.model_enabled_component">
    <resultMap id="ModelEnabledComponent" type="finley.gmair.model.machine.ModelEnabledComponent">
        <result property="mecId" column="mec_id"></result>
        <result property="modelId" column="model_id"></result>
        <result property="componentName" column="component_name"></result>
        <result property="blockFlag" column="block_flag"></result>
        <result property="createAt" column="create_time"></result>
    </resultMap>

    <insert id="insert" parameterType="finley.gmair.model.machine.ModelEnabledComponent" useGeneratedKeys="false">
        INSERT INTO gmair_machine.model_enabled_component(mec_id, model_id, component_name, create_time, block_flag)
        VALUES(#{mecId}, #{modelId}, #{componentName}, #{createAt}, #{blockFlag})
    </insert>

    <select id="query" parameterType="java.util.Map" resultMap="ModelEnabledComponent">
        SELECT mec_id,model_id,component_name,block_flag,create_time
        FROM gmair_machine.model_enabled_component
        WHERE 1 = 1
        <if test="mecId != null">
            AND mec_id = #{mecId}
        </if>
        <if test="modelId != null">
            AND model_id = #{modelId}
        </if>
        <if test="componentName != null">
            AND component_name = #{componentName}
        </if>
        <if test="blockFlag != null">
            AND block_flag = #{blockFlag}
        </if>
    </select>
</mapper>