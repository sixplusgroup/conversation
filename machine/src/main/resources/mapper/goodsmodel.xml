<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gmair.machine.goodsmodel">
    <resultMap id="goodsModelVo" type="finley.gmair.model.goods.GoodsModel">
        <result property="modelId" column="model_id"></result>
        <result property="goodsId" column="goods_id"></result>
        <result property="modelCode" column="model_code"></result>
        <result property="modelAbbr" column="model_abbr"></result>
        <result property="modelName" column="model_name"></result>
        <result property="modelBg" column="model_bg"></result>
        <result property="blockFlag" column="block_flag"></result>
        <result property="createAt" column="create_time"></result>
    </resultMap>

    <resultMap id="goodsModelDetailVo" type="finley.gmair.vo.machine.GoodsModelDetailVo">
        <result property="goodsId" column="goods_id"></result>
        <result property="goodsName" column="goods_name"></result>
        <result property="goodsDescription" column="goods_description"></result>
        <result property="modelId" column="model_id"></result>
        <result property="modelCode" column="model_code"></result>
        <result property="modelAbbr" column="model_abbr"></result>
        <result property="modelName" column="model_name"></result>
        <result property="modelThumbnail" column="model_thumbnail"></result>
        <result property="modelBg" column="model_bg"></result>
    </resultMap>

    <select id="query" parameterType="java.util.Map" resultMap="goodsModelVo">
        SELECT model_id, goods_id, model_code, model_abbr, model_name, model_bg, block_flag, create_time
        FROM gmair_machine.goods_model
        WHERE 1 = 1
        <if test="modelId != null">
            AND model_id = #{modelId}
        </if>
        <if test="goodsId != null">
            AND goods_id = #{goodsId}
        </if>
        <if test="modelCode != null">
            AND model_code = #{modelCode}
        </if>
        <if test="modelName != null">
            AND model_name = #{modelName}
        </if>
        <if test="blockFlag != null">
            AND block_flag = #{blockFlag}
        </if>
        ORDER BY create_time DESC
    </select>

    <select id="queryindetail" parameterType="java.util.Map" resultMap="goodsModelDetailVo">
        SELECT goods_id, goods_name, goods_description, model_id, model_code, model_abbr, model_name, model_thumbnail, model_bg
        FROM gmair_machine.goods_model_view
        WHERE 1 = 1
        <if test="goodsId != null">
            AND goods_id = #{goodsId}
        </if>
        <if test="modelId != null">
            AND model_id = #{modelId}
        </if>
        <if test="modelCode != null">
            AND model_code = #{modelCode}
        </if>
    </select>

    <insert id="insert" parameterType="finley.gmair.model.goods.GoodsModel" useGeneratedKeys="false">
        INSERT INTO gmair_machine.goods_model (model_id, goods_id, model_code, model_name, block_flag, create_time)
        VALUES (#{modelId}, #{goodsId}, #{modelCode}, #{modelName}, #{blockFlag}, #{createAt})
    </insert>
</mapper>