<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gmair.installation.feedback">
    <resultMap id="Feedback" type="finley.gmair.model.installation.Feedback">
        <result property="feedbackId" column="feedback_id"></result>
        <result property="assignId" column="assign_id"></result>
        <result property="memberPhone" column="member_phone"></result>
        <result property="feedbackContent" column="feedback_content"></result>
        <result property="status" column="status"></result>
        <result property="blockFlag" column="block_flag"></result>
        <result property="createAt" column="create_time"></result>
    </resultMap>

    <insert id="insert" parameterType="finley.gmair.model.installation.Feedback" useGeneratedKeys="false">
        INSERT INTO gmair_install.install_feedback(feedback_id, assign_id, member_phone, feedback_content, status, block_flag, create_time)
        VALUES (#{feedbackId}, #{assignId}, #{memberPhone}, #{feedbackContent}, #{status}, #{blockFlag}, #{createAt})
    </insert>

    <select id="query" parameterType="java.util.Map" resultMap="Feedback">
        SELECT *
        FROM gmair_install.install_feedback
        WHERE 1 = 1
        <if test="feedbackId != null">
            AND feedback_id = #{feedbackId}
        </if>
        <if test="assignId != null">
            AND assign_id = #{assignId}
        </if>
        <if test="memberPhone !=null">
            AND member_phone = #{memberPhone}
        </if>
        <if test="status != null">
            AND status = #{status}
        </if>
        <if test="blockFlag != null">
            AND block_flag = #{blockFlag}
        </if>
    </select>
</mapper>