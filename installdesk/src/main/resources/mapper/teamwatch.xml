<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gmair.install.team.watch">
    <resultMap id="teamWatchVo" type="finley.gmair.model.installation.TeamWatch">
        <result property="watchId" column="watch_id"></result>
        <result property="memberId" column="member_id"></result>
        <result property="teamId" column="team_id"></result>
        <result property="blockFlag" column="block_flag"></result>
        <result property="createAt" column="create_time"></result>
    </resultMap>

    <resultMap id="memberTeamVo" type="finley.gmair.model.installation.MemberTeam">
        <id property="memberId" column="member_id"/>
        <association property="member" javaType="finley.gmair.model.installation.Member">
            <result property="memberId" column="member_id"/>
            <result property="teamId" column="team_id"/>
            <result property="memberPhone" column="member_phone"/>
            <result property="memberName" column="member_name"/>
            <result property="wechatId" column="wechat_id"/>
            <result property="memberRole" column="member_role"
                    typeHandler="finley.gmair.mybatis.handler.MemberRoleHandler"/>
            <result property="blockFlag" column="block_flag"/>
            <result property="createAt" column="create_time"/>
        </association>
    </resultMap>

    <insert id="insert" parameterType="finley.gmair.model.installation.TeamWatch" useGeneratedKeys="false">
        INSERT INTO gmair_install.team_watch (watch_id, member_id, team_id, block_flag, create_time)
        VALUES (#{watchId}, #{memberId}, #{teamId}, #{blockFlag}, #{createAt})
    </insert>

    <select id="query" parameterType="java.util.Map" resultMap="teamWatchVo">
        SELECT watch_id, member_id, team_id, block_flag, create_time
        FROM gmair_install.team_watch
        WHERE 1 = 1
        <if test="watchId != null">
            AND watch_id = #{watchId}
        </if>
        <if test="memberId != null">
            AND member_id = #{memberId}
        </if>
        <if test="teamId != null">
            AND team_id = #{teamId}
        </if>
        <if test="blockFlag != null">
            AND block_flag = #{blockFlag}
        </if>
    </select>

    <update id="block">
        UPDATE gmair_install.team_watch
        SET block_flag = TRUE
        WHERE watch_id = #{watchId}
    </update>

    <delete id="remove">
        DELETE FROM gmair_install.team_record
        WHERE watch_id = #{watchId}
    </delete>
    
    <select id="queryMemberTeam" parameterType="java.util.Map" resultMap="memberTeamVo">
        SELECT a.member_id, a.team_id, a.member_phone, a.wechat_id, a.member_name, a.member_role
        FROM gmair_install.team_member a
        LEFT JOIN gmair_install.team_watch b ON a.member_id = b.member_id
        WHERE 1 = 1
        <if test="watchId != null">
            AND b.watch_id = #{watchId}
        </if>
        <if test="memberId != null">
            AND b.member_id = #{memberId}
        </if>
        <if test="teamId != null">
            AND b.team_id = #{teamId}
        </if>
    </select>
</mapper>