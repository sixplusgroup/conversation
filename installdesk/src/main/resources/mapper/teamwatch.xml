<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gmair.install.team.watch">
    <resultMap id="teamWatchVo" type="finley.gmair.model.installation.TeamWatch">
        <result property="watchId" column="watch_id"></result>
        <result property="memberId" column="member_id"></result>
        <result property="teamId" column="team_id"></result>
        <result property="blockFlag" column="block_flag"></result>
        <result property="createAt" column="create_time"></result>
    </resultMap>

    <insert id="insert" parameterType="finley.gmair.model.installation.TeamWatch" useGeneratedKeys="false">
        INSERT INTO gmair_install.team_watch (watch_id, member_id, team_id, block_flag, create_time)
        VALUES (#{watchId}, #{memberId}, #{teamId}, #{blockFlag}, #{createAt})
    </insert>

    <select id="query" parameterType="java.util.Map" resultMap="teamWatchVo">
        SELECT watch_id, member_id, team_id, block_flag, create_time
        FROM gmair_install.team_watch
        WHERE 1 = 1
        <if test="watchId != null">
            AND watch_id = #{watchId}
        </if>
        <if test="memberId != null">
            AND member_id = #{memberId}
        </if>
        <if test="teamId != null">
            AND team_id = #{teamId}
        </if>
        <if test="blockFlag != null">
            AND block_flag = #{blockFlag}
        </if>
    </select>

    <update id="block">
        UPDATE gmair_install.team_watch
        SET block_flag = TRUE
        WHERE watch_id = #{watchId}
    </update>

    <delete id="remove">
        DELETE FROM gmair_install.team_record
        WHERE watch_id = #{watchId}
    </delete>
</mapper>