<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gmair.install.express">
    <resultMap id="expressVo" type="finley.gmair.model.express.Express">
        <result property="status" column="status"/>
        <result property="state" column="state"/>
        <result property="company" column="company"/>
        <result property="expressNo" column="expressNo"/>
        <result property="data" column="data"/>
    </resultMap>

    <insert id="insert" parameterType="finley.gmair.model.express.Express" useGeneratedKeys="false">
        INSERT INTO gmair_install.order_express (status, state, company, expressNo, data)
        VALUES (#{status}, #{state}, #{company}, #{expressNo}, #{data})
    </insert>

    <select id="query" parameterType="java.util.Map" resultMap="expressVo">
        SELECT status, state, company, expressNo, data
        FROM gmair_install.order_express
        WHERE 1 = 1
        <if test="status != null">
            AND status = #{status}
        </if>
        <if test="state != null">
            AND state = #{state}
        </if>
        <if test="company != null">
            AND company = #{company}
        </if>
        <if test="expressNo != null">
            AND expressNo = #{expressNo}
        </if>
        ORDER BY expressNo ASC
    </select>

    <update id="update" parameterType="java.util.Map">
        UPDATE gmair_install.order_express
        <set>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="state != null">
                state = #{state},
            </if>
            <if test="company != null">
                company = #{company},
            </if>
            <if test="data != null">
                data = #{data},
            </if>
            expressNo = #{expressNo}
        </set>
        WHERE expressNo = #{expressNo}
    </update>
</mapper>