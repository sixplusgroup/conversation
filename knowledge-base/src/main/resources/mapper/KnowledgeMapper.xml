<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="finley.gmair.dao.KnowledgeMapper">

    <insert id="insert" parameterType="finley.gmair.po.Knowledge" useGeneratedKeys="true" keyProperty="id">
        insert into knowledge (title, content, state, views,knowledge_type)
        values ( #{title}, #{content}, #{state}, #{views},#{knowledge_type})
    </insert>

    <delete id="delete" parameterType="java.lang.Integer">
        delete from knowledge where id = #{id}
    </delete>


    <resultMap id="Knowledge" type="finley.gmair.po.Knowledge">
    </resultMap>

</mapper>
