<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gmair.payment.returnInfo">
    <resultMap id="infoVo" type="finley.gmair.model.payment.ReturnInfo">
        <result property="infoId" column="info_id"></result>
        <result property="orderId" column="order_id"></result>
        <result property="deviceInfo" column="device_info"></result>
        <result property="nonceStr" column="nonce_str"></result>
        <result property="prepayId" column="prepay_id"></result>
        <result property="sign" column="sign"></result>
        <result property="tradeType" column="trade_type"></result>
        <result property="blockFlag" column="block_flag"></result>
        <result property="createAt" column="create_time"></result>
    </resultMap>

    <select id="query" parameterType="java.util.Map" resultMap="infoVo">
        select info_id, order_id, device_info, nonce_str, prepay_id,sign,trade_type, block_flag, create_time
        from gmair_payment.return_info
        where 1 = 1
        <if test="infoId != null">
            AND info_id = #{infoId}
        </if>
        <if test="orderId != null">
            AND order_id = #{orderId}
        </if>
    </select>

    <insert id="insert" parameterType="finley.gmair.model.payment.ReturnInfo">
        insert into gmair_payment.return_info(info_id, order_id, device_info, nonce_str, prepay_id,sign,trade_type, block_flag, create_time)
        values (#{infoId}, #{orderId}, #{deviceInfo}, #{nonceStr},#{prepayId},#{sign},#{tradeType},#{blockFlag},#{createAt})
    </insert>

</mapper>