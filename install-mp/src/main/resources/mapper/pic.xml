<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gmair.installation.pic">
    <resultMap id="Pic" type="finley.gmair.model.installation.Pic">
        <result property="picId" column="pic_id" />
        <result property="picAddress" column="pic_address" />
        <result property="picMd5" column="pic_md5" />
        <result property="snapshotId" column="snapshot_id" />
        <result property="copyFlag" column="copy_flag" />
        <result property="occupied" column="occupied" />
        <result property="blockFlag" column="block_flag" />
        <result property="createAt" column="create_time" />
    </resultMap>

    <insert id="insert" parameterType="finley.gmair.model.installation.Pic" useGeneratedKeys="false">
        INSERT INTO gmair_install.install_pic
        VALUES(
          #{picId},#{picAddress},#{picMd5},#{snapshotId},#{copyFlag},#{occupied},#{blockFlag},#{createAt}
        )
    </insert>

    <select id="query" parameterType="java.util.Map" resultMap="Pic">
        SELECT pic_id,pic_address,pic_md5,snapshot_id,copy_flag,occupied,block_flag,create_time
        FROM gmair_install.install_pic
        WHERE 1 = 1
        <if test="picId != null">
            AND pic_id = #{picId}
        </if>
        <if test="picAddress != null">
            AND pic_address = #{picAddress}
        </if>
        <if test="picMd5 != null">
            AND pic_md5 = #{picMd5}
        </if>
        <if test="snapshotId != null">
            AND snapshot_id = #{snapshotId}
        </if>
        <if test="copyFlag != null">
            AND copy_flag = #{copyFlag}
        </if>
        <if test="occupied != null">
            AND occupied = #{occupied}
        </if>
        <if test="blockFlag != null">
            AND block_flag = #{blockFlag}
        </if>
    </select>

    <delete id="delete" parameterType="java.util.Map">
        DELETE FROM gmair_install.install_pic
        WHERE 0=1
        <if test="picAddress != null">
            OR pic_address = #{picAddress}
        </if>
    </delete>

    <update id="update" parameterType="finley.gmair.model.installation.Pic">
        UPDATE gmair_install.install_pic
        <set>
            <if test="picId != null">
                pic_id = #{picId},
            </if>
            <if test="picAddress != null">
                pic_address = #{picAddress},
            </if>
            <if test="picMd5 != null">
                pic_md5 = #{picMd5},
            </if>
            <if test="snapshotId != null">
                snapshot_id = #{snapshotId},
            </if>
            <if test="copyFlag != null">
                copy_flag = #{copyFlag},
            </if>
            <if test="occupied != null">
                occupied = #{occupied},
            </if>
            <if test="blockFlag != null">
                block_flag = #{blockFlag},
            </if>
            pic_id = #{picId}
        </set>
        WHERE pic_id = #{picId}
    </update>
</mapper>