<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gmair.openplatform.subscribe">
    <resultMap id="subscriptionVo" type="finley.gmair.model.openplatform.MachineSubscription">
        <result property="subscriptionId" column="subs_id"></result>
        <result property="corpId" column="corp_id"></result>
        <result property="qrcode" column="code_value"></result>
        <result property="blockFlag" column="block_flag"></result>
        <result property="createAt" column="create_time"></result>
    </resultMap>

    <insert id="insert" parameterType="finley.gmair.model.openplatform.MachineSubscription">
        INSERT INTO open_platform.corp_machine_subscribe(subs_id,corp_id,code_value,block_flag,create_time)
        VALUES (#{subscriptionId},#{corpId},#{qrcode},#{blockFlag},#{createAt})
    </insert>

    <select id="query" parameterType="java.util.Map" resultMap="subscriptionVo">
        SELECT subs_id, corp_id, code_value, block_flag, create_time
        FROM open_platform.corp_machine_subscribe
        WHERE 1 = 1
        <if test="subscriptionId != null">
            AND subs_id = #{subscriptionId}
        </if>
        <if test="corpId != null">
            AND corp_id = #{corpId}
        </if>
        <if test="qrcode != null">
            AND code_value = #{qrcode}
        </if>
        <if test="blockFlag != null">
            AND block_flag = #{blockFlag}
        </if>
    </select>

    <update id="block">
        UPDATE open_platform.corp_machine_subscribe
        SET block_flag = TRUE
        WHERE subs_id = #{subscriptionId}
    </update>
</mapper>