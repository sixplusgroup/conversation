<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gmair.analysis.component.mean">
    <resultMap id="action" type="finley.gmair.model.analysis.ComponentMean">
        <result property="recordId" column="record_id"></result>
        <result property="dateIndex" column="date_index"></result>
        <result property="component" column="component"></result>
        <result property="componentTimes" column="component_times"></result>
        <result property="componentMean" column="component_mean"></result>
        <result property="blockFlag" column="block_flag"></result>
        <result property="createAt" column="create_time"></result>
    </resultMap>

    <insert id="insert" parameterType="finley.gmair.model.analysis.ComponentMean" useGeneratedKeys="false">
        INSERT INTO gmair_data_analysis.component_mean(record_id,date_index,component,component_times,component_mean,block_flag, create_time)
        VALUES (#{recordId},#{dateIndex},#{component},#{componentTimes},#{componentMean},#{blockFlag},#{createAt})
    </insert>

    <insert id="insertBatch" parameterType="java.util.List">
        INSERT INTO gmair_data_analysis.component_mean(record_id,date_index,component,component_times,component_mean,block_flag, create_time)
        VALUES
        <foreach collection="list" separator="," item="item" index="index">
            (#{item.recordId},#{item.dateIndex},#{item.component},#{item.componentTimes},#{item.componentMean},#{item.blockFlag},#{item.createAt})
        </foreach>
    </insert>

    <select id="query" parameterType="java.util.Map" resultMap="action">
        SELECT record_id, date_index, component, component_times, component_mean, block_flag, create_time
        FROM gmair_data_analysis.component_mean
        WHERE 1 = 1
        <if test="recordId != null">
            AND record_id = #{recordId}
        </if>
        <if test="dateIndex != null">
            and date_index = #{dateIndex}
        </if>
        <if test="createTimeGTE != null">
            AND create_time >= #{createTimeGTE}
        </if>
        <if test="createTimeLT != null">
            <![CDATA[
                AND create_time < #{createTimeLT}
            ]]>
        </if>
        <if test="blockFlag != null">
            and block_flag = #{blockFlag}
        </if>
        order by create_time asc
    </select>
</mapper>