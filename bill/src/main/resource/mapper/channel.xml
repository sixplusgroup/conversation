<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gmair.bill.channel">
    <resultMap id="channelVo" type="finley.gmair.model.bill.Channel">
        <result property="channelId" column="channel_id"></result>
        <result property="channelName" column="channel_name"></result>
        <result property="blockFlag" column="block_flag"></result>
        <result property="createAt" column="create_time"></result>
    </resultMap>

    <select id="query" parameterType="java.util.Map" resultMap="channelVo">
        select channel_id,channel_name, block_flag, create_time
        from gmair_bill.channel
        where 1 = 1
        <if test = "channelId != null">
            AND channel_id = #{channelId}
        </if>
        <if test = "channelName != null">
            AND channel_name = #{channelName}
        </if>
        <if test="blockFlag != null">
            AND block_flag = #{blockFlag}
        </if>
        ORDER BY create_time ASC
    </select>

    <insert id="insert" parameterType="finley.gmair.model.bill.Channel">
        insert into gmair_bill.channel(channel_id, channel_name, block_flag, create_time)
        values  (#{channelId}, #{channelName}, #{blockFlag}, #{createAt})
    </insert>

    <update id="update" parameterType="finley.gmair.model.bill.Channel">
        update gmair_bill.channel
        <set>
            channel_id = #{channelId}
            channel_name = #{channelName}
        </set>
    </update>

    <delete id="delete" parameterType="java.lang.String">
        delete from gmair_bill.channel
        where channel_id = #{channelId}
    </delete>
</mapper>